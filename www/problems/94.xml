          <NodeName>rust area first week</NodeName>
        </Node>
        <Node level="leaf">
          <Description>each week</Description>
          <NodeName>rust spot area</NodeName>
        </Node>
        <Node level="leaf">


          <Description>after 10 weeks</Description>
          <NodeName>final rust spot area</NodeName>
        </Node>
	  </Node>
    </Node>
