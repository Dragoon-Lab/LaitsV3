                <Name>Jared extra weight</Name>
            </Inputs>
            <Outputs/>
            <Equation>Jared extra weight + Oprah weight</Equation>
            <InitialValue>0.0</InitialValue>
        </Node>
        <Node type="constant" name="Jared extra weight" extra="no">
