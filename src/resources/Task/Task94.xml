    <VertexLabel>rust spot area</VertexLabel>
    <VertexLabel>rust spot area first week</VertexLabel>
    <VertexLabel>new rust area per week</VertexLabel>
    <VertexLabel>rust growth factor</VertexLabel>
  </Vertexes>
    
